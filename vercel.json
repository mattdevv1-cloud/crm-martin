{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(sw\\.js|manifest\\.json|icons/.*|assets/.*)", "destination": "/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}

